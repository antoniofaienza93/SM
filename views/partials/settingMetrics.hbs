<div id="change-setting" class="mainDiv"> 
    <div class="card card-outline-secondary">
        <div class="card-header" id="headerUser">
            <h3 class="mb-0"> <a href="#"><a><img src="../img/settings.svg" class="svg icon header-icon"></a> {{title}}</h3>
        </div>
        <div class="card-body" id="cardBodySetting">             
            <!-- 
            ///////////////////////////////////////////////////////////////////////////////////////
            //
            // PDR Settings
            //
            ///////////////////////////////////////////////////////////////////////////////////////
            -->
            <form class="form" id="settingPDRForm" role="form" autocomplete="off">    
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">
                        <h5 class="mb-0">PDR</h5> 
                    </label>                          
                </div>                
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Palette</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-palette"></i></span>
                            </div>
                            <input type="color" class="form-control palette-color-pdr" id="pdr_interval_x0x1_color" name="pdr_interval_x0x1_color" value="{{settings.pdr.interval_x0x1.color}}">
                            <input type="color" class="form-control palette-color-pdr" id="pdr_interval_x1x2_color" name="pdr_interval_x1x2_color" value="{{settings.pdr.interval_x1x2.color}}"> 
                            <input type="color" class="form-control palette-color-pdr" id="pdr_interval_x2x3_color" name="pdr_interval_x2x3_color" value="{{settings.pdr.interval_x2x3.color}}"> 
                            <input type="color" class="form-control palette-color-pdr" id="pdr_interval_x3x4_color" name="pdr_interval_x3x4_color" value="{{settings.pdr.interval_x3x4.color}}">                                            
                        </div>
                    </div>
                </div>
                <br/>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Slider</label>
                    <div class="col-lg-9">
                        <div class="input-group form-group">
                            <div id="PDR-slider" value="{{json settings}}" class="custom-slider"></div>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Value</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-cog"></i></span>
                            </div>
                            <input type="number" min="0" max="100" step="0.001"  id="pdr_interval_x0x1_threashold" name="pdr_interval_x0x1_threashold" value="{{json settings.pdr.interval_x0x1.threashold}}" class="form-control PDR-segment-value">
                            <input type="number" min="0" max="100" step="0.001"  id="pdr_interval_x1x2_threashold" name="pdr_interval_x1x2_threashold" value="{{json settings.pdr.interval_x1x2.threashold}}" class="form-control PDR-segment-value">
                            <input type="number" min="0" max="100" step="0.001"  id="pdr_interval_x2x3_threashold" name="pdr_interval_x2x3_threashold" value="{{json settings.pdr.interval_x2x3.threashold}}" class="form-control PDR-segment-value">                                          
                        </div>
                    </div>
                </div>
                             
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <input type="button" id="resetPDR" class="btn btn-secondary" value="Original PDR Setting">
                        <input type="submit" class="btn btn-dark" value="Save">
                    </div>
                </div>
                {{!-- DEBUG delete pdr --}}
                {{!-- <p>RISULTATO: {{json settings.pdr}}</p> --}}
            </form>

