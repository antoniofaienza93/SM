<div id="addExperiment" class="mainDiv"> 
    <div class="card card-outline-secondary">
        <div class="card-header" id="headerExperiment">
            <h3 class="mb-0"> <a href="#"><a><img src="../img/plus.svg" class="svg icon header-icon"></a> {{titleSingleExperiment}}</h3>
        </div>
        <div class="card-body" id="cardBodyExperiment">
            <form class="form" id="addExperimentForm" role="form" autocomplete="off">    
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Latitude</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-map"></i></span>
                            </div>
                            <input type="number" class="form-control" value="0" name="latitude" step=".0000001" required>                                                                        
                        </div>
                    </div>
                </div>                            
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Longitude</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-map"></i></span>
                            </div>
                            <input type="number" class="form-control" value="0" name="longitude" step=".0000001" required>
                        </div>
                    </div>
                </div>

                
                {{!-- ============ Metrics ================ --}}                
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">
                        <h5 class="mb-0">Metrics</h5> 
                    </label>                          
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">PDR (Packet Delivery Ration)</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-chart-line"></i></span>
                            </div>
                            <input type="number" class="form-control"  min="0" max="100" value="0" name="pdr" id="pdr" step=".01">                                              
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Delay</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-chart-line"></i></span>
                            </div>
                            <input type="number" class="form-control"  min="0" value="0" name="delay" id="delay" step=".01">                                              
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Throughput</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-chart-line"></i></span>
                            </div>
                            <input type="number" class="form-control"  min="0" value="0" name="throughput" id="throughput" step=".01">                                              
                        </div>
                    </div>
                </div>             
                {{!-- ============================================ --}}
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">
                        <h5 class="mb-0">Others</h5> 
                    </label>                          
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Experiment Name</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-font"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Experiment name" name="name" required>                                    
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Latitude Server</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-globe"></i></span>
                            </div>
                            <input type="number" class="form-control"  min="0" value="0" name="latitudeServer" step=".0000001" required>                                              
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Longitude Server</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-globe"></i></span>
                            </div>
                            <input type="number" class="form-control"  min="0" value="0" name="longitudeServer" step=".0000001" required>                                              
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <input type="button" id="resetAddExperiment" class="btn btn-secondary" value="Cancel">
                        <input type="submit" class="btn btn-dark" value="Save">
                    </div>
                </div>
            </form>
        </div>
    </div>
    {{!-- Multi Experiment --}}
    <div class="card card-outline-secondary">
        <div class="card-header" id="headerExperimentText">
            <h3 class="mb-0"> <a href="#"><a><img src="../img/plus.svg" class="svg icon header-icon"></a> {{titleMultiExperiment}}</h3>
        </div>
        <div class="card-body" id="cardBodyExperimentText">
            <form class="form" id="addExperimentFormText" role="form" autocomplete="off">    
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Add JSON</label>
                    <div class="col-lg-9">
                            <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-map"></i></span>
                            </div>
                            <textarea class="form-control" rows="5" id="multiexperiments" name="multiexperiments" required placeholder='[{ "latitude": "44.4984508","longitude": "11.3335356","metrics": { "pdr":"0.21","delay":"0.22", "throughput":"0.23"},"name": "Via Riva Reno","latitudeServer":"44.498955","longitudeServer":"11.327591"  }, { ... }]'></textarea>                                                                       
                        </div>
                    </div>
                </div> 
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <input type="button" id="resetAddExperimentText" class="btn btn-secondary" value="Cancel">
                        <input type="submit" class="btn btn-dark" value="Save">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
